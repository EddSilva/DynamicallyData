@{
    ViewData["Title"] = "Home Page";
    @model API.DynamicallyData.Models.ViewModel
}
<div class="row">
    <div class="text-center col-12">
        <div class="row">
            <div class="col-6">
                <div class="form-group row">
                    <label for="formControlSelect" class="col-sm-2 col-form-label">Tables</label>
                    <div class="col-sm-10 tables-list-container">
                        <select class="form-control selectpicker" id="formControlSelect">
                            <option data-table-name="none">Select One Table</option>
                            @foreach (var item in Model.Tables)
                            {
                                <option data-table-name="">@item.Value</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <nav>
                    <ul class="pagination" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
        <form>
            <div class="table-responsive">
                <table class="table table-dark table-condensed table-striped table-bordered table-sm">
                    <thead>
                        <tr id="tableHead">
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>

